mixin search(keyword)
    form(id="form-search")
        .input-group
            input(
                type="text",
                placeHolder="Nhập từ khóa",
                name="keyword",
                class="form-control"
                value=keyword
            )
            .input-group-appped 
                button(
                    class="btn btn-success",
                    type="submit"
                )   Tìm
