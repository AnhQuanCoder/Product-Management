extend ../../layouts/default.pug

block main
    if (role.permissions.includes("roles_create"))
        h1(class="mb-4") #{pageTitle}

        form(
            action=`${prefixAdmin}/roles/create`
            method="POST"
        ) 
            div(class="form-group")
                label(for="title") Tiêu đề
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    require
                ) 
            div(class="form-group")
                label(for="description") Mô tả ngắn 
                input(
                    type="text"
                    class="form-control"
                    id="des"
                    name="description"
                ) 
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Tạo mới
    else 
        h1 Bạn không được cấp quyền làm tính năng này