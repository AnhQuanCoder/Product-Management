extend ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(5000)
    h1(class="mb-4") #{pageTitle}

    form(
        action=`${prefixAdmin}/roles/edit/${record.id}?_method=PATCH`
        method="POST"
    ) 
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                require
                value=record.title
            ) 
        div(class="form-group")
            label(for="description") Mô tả ngắn 
            input(
                type="text"
                class="form-control"
                id="des"
                name="description"
                value=record.description
            ) 
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Lưu lại