extends ../../layouts/default.pug

block main
    h1(class="mb-4") #{pageTitle}

    .col-12
        .card.mb-4
            .card-header <b>Thông tin cá nhân</b>
            .card-body
                table(
                    class="table table-hover table-sm"
                )
                    thead 
                        tr 
                            th Họ tên
                            th Số điện thoại
                            th Địa chỉ
                    tbody
                        tr 
                            td #{record.userInfo.fullName}
                            td #{record.userInfo.phone}
                            td #{record.userInfo.address}

    .col-12
        .card.mb-4
            .card-header Mã đơn hàng: <b>#{record.id}</b>
            .card-body
                table(
                    class="table table-hover table-sm"
                )
                    thead 
                        tr 
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Số lượng
                            th Phần trăm giảm giá
                            th Giá cũ
                            th Giá mới
                    tbody
                        each subItem, index in record.products
                            tr
                                td #{index + 1}
                                td
                                    img(src=subItem.thumbnail alt=subItem.title width="80px" style="object-fit: cover;")
                                td #{subItem.title}
                                td x#{subItem.quantity}
                                td #{subItem.discountPercentage}%
                                td #{subItem.price}$
                                td <b>#{subItem.priceNew}$</b>

                p(style="text-align: end;") Tổng tiền: <b>#{record.totalPrice}$</b>