extends ../../layouts/default.pug


block main 
    h1 #{pageTitle}

    .card.mb-3 
        .card-header Danh sách
            .card-body
                .row 
                    .col-8 

                    .col-4  
                        a(
                            href=`${prefixAdmin}/products-category/create`
                            class="btn btn-outline-success"
                        ) Thêm mới sản phẩm

                table(
                    class="table table-hover table-sm"
                    check-box-multi
                )
                    thead 
                        tr 
                            th 
                                input(type="checkbox" name="checkall")
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Vị trí
                            th Trạng thái
                            th Hành động

                    tbody 
                        each item, index in records 
                            tr 
                                td
                                    input(
                                        type="checkbox" 
                                        name="id"
                                        value=item.id
                                    )
                                td #{index + 1}
                                td 
                                    img(src=item.thumbnail, alt=item.title, width="100px", heigth="auto")
                                td #{item.title}
                                td 
                                    input(
                                        type="number"
                                        value=item.position
                                        styte="width: 60px"
                                        min="1"
                                        name="position"
                                    )
                                td 
                                    if(item.status == "active")
                                        a(
                                            href="javascript:;"
                                            class="badge badge-success"
                                            data-id=item.id
                                            data-status=item.status
                                            button-change-status
                                        ) Hoạt động
                                    else 
                                        a(
                                            href="javascript:;"
                                            class="badge badge-danger" 
                                            data-id=item.id 
                                            data-status=item.status
                                            button-change-status
                                        ) Dừng hoạt động
                                td 
                                    a(href=`${prefixAdmin}/products-category/detail/${item.id}` class="btn btn-secondary btn-sm mr-1") Chi tiết 
                                    a(href=`${prefixAdmin}/products-category/edit/${item.id}` class="btn btn-warning btn-sm mr-1") Sửa 
                                    button(
                                        class="btn btn-danger btn-sm"
                                        data-id=item.id 
                                        button-delete
                                    ) Xóa 
    script(src="/admin/js/products.js") 

