extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/change-multi.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/sort.pug
include ../../mixins/pagination.pug

block main 
    +alert-success(5000)
    h1(class="mb-4") #{pageTitle}

    .card.mb-3 
            .card-header Bộ lọc và Tìm kiếm 
            .card-body 
                .row 
                    .col-6 
                        +filter-status(filterStatus)

                    .col-6 
                        +search(keyword)

    .card.mb-3 
        .card-header Sắp xếp 
        .card-body 
            .row 
                .col-4 
                    +sort-accounts()

    .card.mb-3 
        .card-header Danh sách 
        .card-body 
            .row 
                .col-8
                    +form-change-multi-accounts(`${prefixAdmin}/accounts/change-multi?_method=PATCH`)

                .col-4.text-right
                    a(
                        href=`${prefixAdmin}/accounts/create`
                        class="btn btn-outline-success"
                    ) Thêm mới
            
            if (records.length > 0)
                table(
                    class="table table-hover table-sm"
                    check-box-multi
                )
                    thead 
                        tr 
                            th 
                                input(type="checkbox" name="checkall")
                            th STT
                            th Avatar
                            th Họ tên
                            th Phân quyền
                            th Email
                            th Trạng thái
                            th Hành động

                    tbody 
                        each item, index in records 
                            tr 
                                td
                                    input(
                                        type="checkbox" 
                                        name="id"
                                        value=item.id
                                    )
                                td #{(index + 1)}
                                td 
                                    img(src=item.avatar, alt=item.title, width="100px", heigth="auto")
                                td #{item.fullName}
                                td #{item.role.title}
                                td #{item.email}
                                td 
                                    if(item.status == "active")
                                        a(
                                            href="javascript:;"
                                            class="badge badge-success"
                                            data-id=item.id
                                            data-status=item.status
                                            button-change-status
                                        ) Hoạt động
                                    else 
                                        a(
                                            href="javascript:;"
                                            class="badge badge-danger" 
                                            data-id=item.id 
                                            data-status=item.status
                                            button-change-status
                                        ) Dừng hoạt động
                                td 
                                    a(href=`${prefixAdmin}/accounts/detail/${item.id}` class="btn btn-secondary btn-sm mr-1") Chi tiết 
                                    a(href=`${prefixAdmin}/accounts/edit/${item.id}` class="btn btn-warning btn-sm mr-1") Sửa 
                                    button(
                                        class="btn btn-danger btn-sm"
                                        data-id=item.id 
                                        button-delete
                                    ) Xóa

            else
                p Hiện chưa có nhóm quyền nào được tạo hãy tạo mới
                p 
                    a(
                        href=`${prefixAdmin}/roles/create`
                        class="btn btn-secondary"
                    ) Tạo nhóm quyền

    +pagination(pagination)

    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path=`${prefixAdmin}/accounts/change-status`
    ) 

    form(
        action=""
        method="POST"
        id="form-delete-item"
        data-path=`${prefixAdmin}/accounts/delete`
    )
    
    script(src="/admin/js/accounts.js") 