extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-success(5000)
    +alert-error(5000)

    .container.my-5
        .row.justify-content-center 
            .col-8
                h1(class="text-center") #{pageTitle}
                form(
                    action="/user/register"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="fullName") Họ và tên 
                        input(
                            type="text"
                            class="form-control"
                            id="fullName"
                            name="fullName"
                            require
                        )
                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            require
                        )
                    div(class="form-group")
                        label(for="password") Mật khẩu
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            require
                        )
                    div(class="form-group")
                        label(for="rePassword") Nhập lại mật khẩu
                        input(
                            type="password"
                            class="form-control"
                            id="rePassword"
                            name="rePassword"
                            require
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="form-control"
                            class="btn btn-success"
                        ) Đăng ký

                    
